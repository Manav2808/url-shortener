<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
</head>

<body>
    <h1>URL Shortener</h1>
    <form method="post" onsubmit="fetchUrl(event)">
        <input type="text" id="url" required />
        <button type="submit">Shorten URL</button>
    </form>
    <p id="shortened-url"></p>

    <h3>Explore all the Short Urls</h3>
    <table>
        <tr>
            <th>URL</th>
            <th>Short URL</t>
        </tr>
        <% allUrls.forEach(urls=> { %>
            <tr>
                <td>
                    <%= urls.url %>
                </td>
                <td>
                    <%= urls.shortUrl %>
                </td>
            </tr>
            <% }) %>
    </table>
    <script>
        async function fetchUrl(e) {
            var urlInput = document.getElementById("url");
            var url = urlInput.value;

            e.preventDefault();
            await fetch('http://localhost:3000/url', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ url: url })
            })
                .then(response => response.json())
                .then(data => {
                    document.getElementById('shortened-url').innerHTML = 'Shortened URL: http://localhost:3000/' + String(data.id);
                });
        }
    </script>
</body>

</html>